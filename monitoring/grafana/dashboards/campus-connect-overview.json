{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 9 },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Container CPU Usage %",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 9 },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total[5m])) * 100",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "cAdvisor",
      "type": "stat",
      "gridPos": { "x": 0, "y": 9, "w": 3, "h": 4 },
      "targets": [
        { "expr": "up{job=\"cadvisor\"}", "legendFormat": "cAdvisor" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "PostgreSQL",
      "type": "stat",
      "gridPos": { "x": 3, "y": 9, "w": 3, "h": 4 },
      "targets": [
        { "expr": "up{job=\"postgres\"}", "legendFormat": "PostgreSQL" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Redis",
      "type": "stat",
      "gridPos": { "x": 6, "y": 9, "w": 3, "h": 4 },
      "targets": [{ "expr": "up{job=\"redis\"}", "legendFormat": "Redis" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Node Exporter",
      "type": "stat",
      "gridPos": { "x": 9, "y": 9, "w": 3, "h": 4 },
      "targets": [
        { "expr": "up{job=\"node-exporter\"}", "legendFormat": "Node Exporter" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Running Containers",
      "type": "stat",
      "gridPos": { "x": 12, "y": 9, "w": 3, "h": 4 },
      "targets": [{ "expr": "count(container_memory_usage_bytes{name!=\"\"})" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Redis Memory %",
      "type": "gauge",
      "gridPos": { "x": 15, "y": 9, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "Total Container Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 13, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{name!=\"\"})",
          "legendFormat": "Total Memory"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "title": "PostgreSQL Active Connections",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 13, "w": 7, "h": 8 },
      "targets": [
        { "expr": "pg_stat_activity_count", "legendFormat": "Connections" }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "title": "Application Logs",
      "type": "logs",
      "gridPos": { "x": 19, "y": 13, "w": 5, "h": 8 },
      "targets": [
        {
          "expr": "{container_name=~\"campus_connect_.*\"}",
          "queryType": "range"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["campus-connect", "containers", "production"],
  "time": { "from": "now-15m", "to": "now" },
  "timezone": "",
  "title": "Campus Connect â€“ Production Dashboard",
  "uid": "campus-connect-prod",
  "version": 1
}
