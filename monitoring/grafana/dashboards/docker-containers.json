{
  "uid": "docker-containers",
  "title": "Docker Containers",
  "tags": ["docker", "cadvisor"],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage per Container",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total[5m])) * 100",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0 }
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage per Container",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      },
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Running Containers",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(container_memory_usage_bytes{name!=\"\"})"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 6, "h": 4 }
    }
  ]
}
