{
  "name": "connect-campus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "prisma generate",
    "format": "prettier --write \"./\"",
    "format:check": "prettier --check \"./\"",
    "validate": "pnpm typecheck && pnpm lint && pnpm format:check",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "docker:db:migrate": "docker-compose exec app-dev pnpm prisma migrate dev",
    "docker:db:deploy": "docker-compose exec app-dev pnpm prisma migrate deploy",
    "docker:dev:build": "docker-compose build app-dev nginx-dev",
    "docker:dev:up": "docker-compose --profile dev up",
    "docker:dev:up-nginx": "docker-compose --profile dev up nginx-dev",
    "docker:dev:down": "docker-compose --profile dev down",
    "docker:dev:logs": "docker-compose --profile dev logs -f",
    "docker:dev:logs-app": "docker-compose logs -f app-dev",
    "docker:dev:logs-nginx": "docker-compose logs -f nginx-dev",
    "docker:prod:build": "docker-compose build app-prod nginx-prod",
    "docker:prod:up": "docker-compose --profile prod up",
    "docker:prod:up-nginx": "docker-compose --profile prod up nginx-prod",
    "docker:prod:down": "docker-compose --profile prod down",
    "docker:prod:logs": "docker-compose --profile prod logs -f",
    "docker:prod:logs-app": "docker-compose logs -f app-prod",
    "docker:prod:logs-nginx": "docker-compose logs -f nginx-prod",
    "docker:db:logs": "docker-compose logs -f db",
    "docker:db:psql": "docker exec -it campus_connect_db psql -U myuser -d campus_connect",
    "redis:cli": "docker exec -it campus_connect_redis redis-cli",
    "redis:info": "docker exec campus_connect_redis redis-cli info",
    "redis:memory": "docker exec campus_connect_redis redis-cli info memory",
    "redis:clients": "docker exec campus_connect_redis redis-cli info clients",
    "redis:stats": "docker exec campus_connect_redis redis-cli info stats",
    "redis:keyspace": "docker exec campus_connect_redis redis-cli info keyspace",
    "redis:pubsub:channels": "docker exec campus_connect_redis redis-cli pubsub channels",
    "redis:pubsub:clients": "docker exec campus_connect_redis redis-cli info clients | grep pubsub_clients",
    "redis:pubsub:numsub": "docker exec campus_connect_redis redis-cli pubsub numsub",
    "redis:client:list": "docker exec campus_connect_redis redis-cli client list",
    "redis:bigkeys": "docker exec campus_connect_redis redis-cli --bigkeys",
    "redis:dbsize": "docker exec campus_connect_redis redis-cli dbsize",
    "redis:flushall": "docker exec campus_connect_redis redis-cli flushall",
    "redis:logs": "docker-compose logs -f redis",
    "docker:prune": "docker system prune -af --volumes",
    "docker:images": "docker images",
    "docker:ps": "docker ps -a",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@aws-sdk/client-s3": "^3.916.0",
    "@aws-sdk/s3-request-presigner": "^3.916.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "6.16.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "better-auth": "^1.3.31",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.539.0",
    "next": "16.0.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "prisma": "^6.18.0",
    "radix-ui": "latest",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.65.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.23",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
