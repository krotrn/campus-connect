{
  "name": "connect-campus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "prisma generate",
    "format": "prettier --write \"./\"",
    "format:check": "prettier --check \"./\"",
    "validate": "pnpm typecheck && pnpm lint && pnpm format:check",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "docker:db:migrate": "docker compose exec app-dev pnpm prisma migrate dev",
    "docker:db:deploy": "docker compose exec app-dev pnpm prisma migrate deploy",
    "docker:dev:build": "docker compose build app-dev nginx-dev",
    "docker:dev:up": "docker compose --profile dev up",
    "docker:dev:up-nginx": "docker compose --profile dev up nginx-dev",
    "docker:dev:down": "docker compose --profile dev down",
    "docker:dev:logs": "docker compose --profile dev logs -f",
    "docker:dev:logs-app": "docker compose logs -f app-dev",
    "docker:dev:logs-nginx": "docker compose logs -f nginx-dev",
    "docker:prod:build": "docker compose build app-prod nginx-prod",
    "docker:prod:up": "docker compose --profile prod up",
    "docker:prod:up-nginx": "docker compose --profile prod up nginx-prod",
    "docker:prod:down": "docker compose --profile prod down",
    "docker:prod:logs": "docker compose --profile prod logs -f",
    "docker:prod:logs-app": "docker compose logs -f app-prod",
    "docker:prod:logs-nginx": "docker compose logs -f nginx-prod",
    "docker:db:logs": "docker compose logs -f db",
    "docker:db:psql": "docker exec -it campus_connect_db psql -U connect -d campus_connect",
    "redis:cli": "docker exec -it campus_connect_redis redis-cli",
    "redis:info": "docker exec campus_connect_redis redis-cli info",
    "redis:memory": "docker exec campus_connect_redis redis-cli info memory",
    "redis:clients": "docker exec campus_connect_redis redis-cli info clients",
    "redis:stats": "docker exec campus_connect_redis redis-cli info stats",
    "redis:keyspace": "docker exec campus_connect_redis redis-cli info keyspace",
    "redis:pubsub:channels": "docker exec campus_connect_redis redis-cli pubsub channels",
    "redis:pubsub:clients": "docker exec campus_connect_redis redis-cli info clients | grep pubsub_clients",
    "redis:pubsub:numsub": "docker exec campus_connect_redis redis-cli pubsub numsub",
    "redis:client:list": "docker exec campus_connect_redis redis-cli client list",
    "redis:bigkeys": "docker exec campus_connect_redis redis-cli --bigkeys",
    "redis:dbsize": "docker exec campus_connect_redis redis-cli dbsize",
    "redis:flushall": "docker exec campus_connect_redis redis-cli flushall",
    "redis:logs": "docker compose logs -f redis",
    "docker:prune": "docker system prune -af --volumes",
    "docker:images": "docker images",
    "docker:ps": "docker ps -a",
    "docker:cleanup:orphaned-files": "docker compose exec app-dev pnpm tsx workers/scripts/cleanup-orphaned-files.ts",
    "docker:cleanup:orphaned-files:dry": "docker compose exec app-dev pnpm tsx workers/scripts/cleanup-orphaned-files.ts --dry-run",
    "docker:cleanup:orphaned-files:prod": "docker compose exec worker-prod npx tsx workers/scripts/cleanup-orphaned-files.ts",
    "cleanup:orphaned-files": "tsx workers/scripts/cleanup-orphaned-files.ts",
    "cleanup:orphaned-files:dry": "tsx workers/scripts/cleanup-orphaned-files.ts --dry-run",
    "prepare": "husky",
    "build:worker": "tsc -p tsconfig.worker.json && mkdir -p dist/prisma && cp -r prisma/generated dist/prisma/"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "7.3.0",
    "@prisma/client-runtime-utils": "^7.3.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@react-pdf/renderer": "^4.3.2",
    "@tanstack/query-async-storage-persister": "^5.90.22",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "better-auth": "^1.4.17",
    "bullmq": "^5.67.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "input-otp": "^1.4.2",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "pino": "^10.3.0",
    "postcss": "^8.5.6",
    "prisma": "^7.3.0",
    "radix-ui": "latest",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^6.1.0",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tsx": "^4.21.0",
    "vaul": "^1.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "baseline-browser-mapping": "^2.9.18",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "ignore-loader": "^0.1.2",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
