{
  "name": "connect-college",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "prisma generate",
    "format": "prettier --write \"./\"",
    "format:check": "prettier --check \"./\"",
    "validate": "pnpm typecheck && pnpm lint && pnpm format:check",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "docker:db:migrate": "docker-compose exec app-dev pnpm prisma migrate dev",
    "docker:db:deploy": "docker-compose exec app-dev pnpm prisma migrate deploy",
    "docker:dev:build": "docker-compose build app-dev nginx-dev",
    "docker:dev:up": "docker-compose --profile dev up",
    "docker:dev:up-nginx": "docker-compose --profile dev up nginx-dev",
    "docker:dev:down": "docker-compose --profile dev down",
    "docker:dev:logs": "docker-compose --profile dev logs -f",
    "docker:dev:logs-app": "docker-compose logs -f app-dev",
    "docker:dev:logs-nginx": "docker-compose logs -f nginx-dev",
    "docker:prod:build": "docker-compose build app-prod nginx-prod",
    "docker:prod:up": "docker-compose --profile prod up",
    "docker:prod:up-nginx": "docker-compose --profile prod up nginx-prod",
    "docker:prod:down": "docker-compose --profile prod down",
    "docker:prod:logs": "docker-compose --profile prod logs -f",
    "docker:prod:logs-app": "docker-compose logs -f app-prod",
    "docker:prod:logs-nginx": "docker-compose logs -f nginx-prod",
    "docker:db:logs": "docker-compose logs -f db",
    "docker:db:psql": "docker exec -it college_connect_db psql -U myuser -d college_connect",
    "docker:prune": "docker system prune -af --volumes",
    "docker:images": "docker images",
    "docker:ps": "docker ps -a",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "6.14.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.539.0",
    "next": "^15.5.0",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "prisma": "^6.16.0",
    "qrcode.react": "^4.2.0",
    "radix-ui": "latest",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.18",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.9.0",
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
